{% extends 'base.html.twig' %}

{% block title %}Shipment index{% endblock %}

{% block body %}
    <h1>Shipment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shipment in shipments %}
            <tr>
                <td>{{ shipment.id }}</td>
                <td>{{ shipment.Name }}</td>
                <td>{{ shipment.Price }}</td>
                <td>
                    <a href="{{ path('app_shipment_show', {'id': shipment.id}) }}">show</a>
                    <a href="{{ path('app_shipment_edit', {'id': shipment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shipment_new') }}">Create new</a>
{% endblock %}
